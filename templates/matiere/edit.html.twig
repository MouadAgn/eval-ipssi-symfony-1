{% extends 'base.html.twig' %}

{% block title %}Edit Card{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Card</h1>

        {# Responsive Bootstrap Form #}
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group row">
            {{ form_label(form.nom, 'Matiere Name', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.coefficient, 'Coefficient', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.coefficient, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <button href="route" class="btn btn-warning">Supprimer</button> 
            </div>
        </div>

        {{ form_end(form) }}
        {# End of Form #}

        {# Responsive Bootstrap Card #}
        
            <div class="card-body">
                {% for element in matieres %}
                    <h5 class="card-title">{{ element.nom }}</h5>
                    <p class="card-text">Coefficient: {{ element.coefficient }}</p>
                {% endfor %}
            </div>
       
        {# End of Card #}
    </div>
{% endblock %}
